/*
* LIVERY SELECTION
*/

random_switch(FEAT_TRAINS, SELF, switch_wagons_GTUW_openwagon_randomlivery) {
	1: spritegroup_wagons_GTUW_openwagon_1;
    1: spritegroup_wagons_GTUW_openwagon_2;
    1: spritegroup_wagons_GTUW_openwagon_3;
    1: spritegroup_wagons_GTUW_openwagon_4;
}

switch(FEAT_TRAINS, SELF, switch_wagons_GTUW_openwagon_livery, cargo_subtype) {
	1: spritegroup_wagons_GTUW_openwagon_1;
    2: spritegroup_wagons_GTUW_openwagon_2;
    3: spritegroup_wagons_GTUW_openwagon_3;
    4: spritegroup_wagons_GTUW_openwagon_4;
    switch_wagons_GTUW_openwagon_randomlivery;
}

// CARGO SUBTYPE CALLBACK
switch(FEAT_TRAINS, SELF, switch_wagons_GTUW_openwagon_subtype_text, cargo_subtype) {
    0: return string(str_cargo_subtype_random);
    1: return string(str_cargo_subtype_brown_light);
    2: return string(str_cargo_subtype_brown);
    3: return string(str_cargo_subtype_brown_other);
    4: return string(str_cargo_subtype_brown_dark);
    return CB_RESULT_NO_TEXT;
}
