/*
* LIVERY SELECTION
*/

random_switch(FEAT_TRAINS, SELF, switch_wagons_Eass_openwagon_randomlivery) {
    1: spritegroup_wagons_Eass_openwagon_2;
    1: spritegroup_wagons_Eass_openwagon_3;
    1: spritegroup_wagons_Eass_openwagon_4;
    1: spritegroup_wagons_Eass_openwagon_5;
}

switch(FEAT_TRAINS, SELF, switch_wagons_Eass_openwagon_livery, cargo_subtype) {
	1: spritegroup_wagons_Eass_openwagon_1;
    2: spritegroup_wagons_Eass_openwagon_2;
    3: spritegroup_wagons_Eass_openwagon_4;
    4: spritegroup_wagons_Eass_openwagon_3;
    5: spritegroup_wagons_Eass_openwagon_5;
    switch_wagons_Eass_openwagon_randomlivery;
}

// CARGO SUBTYPE CALLBACK
switch(FEAT_TRAINS, SELF, switch_wagons_Eass_openwagon_subtype_text, cargo_subtype) {
    0: return string(str_cargo_subtype_random);
    1: return string(str_cargo_subtype_brown);
    2: return string(str_cargo_subtype_blue_greyish);
    3: return string(str_cargo_subtype_blue);
    4: return string(str_cargo_subtype_lighterblue);
    5: return string(str_cargo_subtype_grey);
    return CB_RESULT_NO_TEXT;
}
