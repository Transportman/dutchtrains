/*
* VEHICLE
*/

//darker blue
spriteset(spriteset_wagons_Fccpps_selfdischarger_1_empty, "gfx/wagons/Fccpps_selfdischarger.png") {
	template_2cc_58(0, 0)
}
spriteset(spriteset_wagons_Fccpps_selfdischarger_1_half, "gfx/wagons/Fccpps_selfdischarger.png") {
