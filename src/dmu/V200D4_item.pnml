switch(FEAT_TRAINS, SELF, switch_coaches_V200D4_additional_text, [
        STORE_TEMP(string(str_purchase_svc_lp) | string(str_purchase_axl_B) << 16, 256),
        STORE_TEMP(string(str_purchase_len_4_20) | string(str_purchase_spc_fictional) << 16, 257),
        STORE_TEMP((param_loading_speed == 0) ? 9 : (param_loading_speed == 2) ? 3 : 5, 258)
        //                                      ^ slow                      fast ^   ^ medium
        ]) {
    return string(str_purchase_svc_axl_len_ltm_spc);
}

item(FEAT_TRAINS, item_dmu_V200D4) {
    property {
        name: string(str_dmu_V200D4);
        
        introduction_date: date(2040,1,1);
        model_life: VEHICLE_NEVER_EXPIRES;
        vehicle_life: 30;
        loading_speed: (param_loading_speed == 0) ? 32 : (param_loading_speed == 2) ? 128 : 64;
        //                                          ^ slow                      fast ^   ^ medium
        cost_factor: 62;
        running_cost_factor: 47;
        speed: 200 km/h;
        power: 1900 hpM;
        cargo_capacity: 60;
        weight: 100 ton;
        tractive_effort_coefficient: 0.2;
        air_drag_coefficient: 0;
        
        reliability_decay: 20;
        CARGODEF_PASSENGERS
        cargo_age_period: 185;
        misc_flags: bitmask(TRAIN_FLAG_MU, TRAIN_FLAG_FLIP, TRAIN_FLAG_AUTOREFIT);
        refit_cost: 0;
        track_type: unelectrified_B;
		ai_special_flag: AI_FLAG_PASSENGER;
        running_cost_base: RUNNING_COST_DIESEL;
        engine_class: ENGINE_CLASS_DIESEL;
        visual_effect_and_powered: visual_effect_and_powered(VISUAL_EFFECT_DIESEL, 0, DISABLE_WAGON_POWER);
        
        climates_available: param_fictional;
        sprite_id: SPRITE_ID_NEW_TRAIN;
        dual_headed: 0;
        length: 8;
        extra_power_per_wagon: 0;
        bitmask_vehicle_info: 0;
	}
    graphics {
        cargo_capacity: return 60;
        purchase: spriteset_dmu_V200D4_purchase;
		cargo_subtype_text: switch_dmu_V200D4_subtype_text;
        additional_text: switch_coaches_V200D4_additional_text;
        articulated_part: switch_dmu_V200D4_articulated;
        visual_effect_and_powered: switch_dmu_V200D4_visual_effect_and_powered;
        switch_dmu_V200D4_livery;
    }
}
