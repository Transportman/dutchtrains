/*
* LIVERY SELECTION
*/

random_switch(FEAT_TRAINS, PARENT, switch_emu_FLIRT3III_randomlivery_2017) {
	1: switch_emu_FLIRT3III_Arriva_position;
	10: switch_emu_FLIRT3III_NS_position;
}

random_switch(FEAT_TRAINS, PARENT, switch_emu_FLIRT3III_randomlivery_2018) {
	1: switch_emu_FLIRT3III_Arriva_position;
	10: switch_emu_FLIRT3III_NS_position;
	1: switch_emu_FLIRT3III_Blauwnet_position;
	1: switch_emu_FLIRT3III_Connexxion_position;
	1: switch_emu_FLIRT3III_drielanden_position;
}

switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_randomlivery, current_year) { 
	0..2017: switch_emu_FLIRT3III_randomlivery_2017;
	switch_emu_FLIRT3III_randomlivery_2018;
}

//Livery Switch Sets
switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_livery, cargo_subtype){
    0: 	switch_emu_FLIRT3III_randomlivery;
	1:	switch_emu_FLIRT3III_NS_position;
    2:	switch_emu_FLIRT3III_Arriva_position;
    3:	switch_emu_FLIRT3III_Blauwnet_position;
    4:	switch_emu_FLIRT3III_Connexxion_position;
    5:	switch_emu_FLIRT3III_drielanden_position;
}

// CARGO SUBTYPE CALLBACK
switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_subtype_text, cargo_subtype){
	0: return string(str_cargo_subtype_auto);
    1: return string(str_cargo_subtype_NS);
    2: return string(str_cargo_subtype_Arriva);
    3: return string(str_cargo_subtype_Keolis_blauwnet);
    4: return string(str_cargo_subtype_Connexxion_valleilijn);
	5: return string(str_cargo_subtype_Arriva_drielanden);
	return CB_RESULT_NO_TEXT;
}

/*
* ARTICULATED VEHICLE CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_articulated, extra_callback_info1) {
    1..2: return item_emu_FLIRT3III; //use same vehicle for all parts
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS; //stop adding vehicle parts
}

/*
* VISUAL EFFECT AND POWERED CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_visual_effect_and_powered, (position_in_articulated_veh)) {
    1: return visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, 0, DISABLE_WAGON_POWER);
    return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

/*
* Length
*/
switch(FEAT_TRAINS, SELF, switch_emu_FLIRT3III_length, (position_in_articulated_veh)) { 
	1: 6;
	8;
}